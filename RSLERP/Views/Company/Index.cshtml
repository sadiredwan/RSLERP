@using RSLERP.DataManager.Entity
@model RSLERP.Models.ViewModel 
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutSettings.cshtml";
}

<div class="content-wrapper">

    <section class="content-header">
               <h1>Company</h1>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            
            <div class="col-xs-12">
                <div class="box box-primary">
                    <div class="box-header">
                        @{Html.RenderAction("SubmitStatus", "Common", new { status = Model.CommitStatus, message = Model.SaveChangeMessage }); }
                        <h3 class="box-title">Company</h3>
                        <a class="btn btn-primary pull-right" href="@Url.Action("load",HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString())"><span class="fa fa-plus"></span> Add</a>
                        <div class="box-tools">
                        </div>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                     
                        <table id="example2" class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Company ID</th>
                                    <th>Company Name</th>
                                    <th>Edit</th>
                                </tr>
                            </thead>
                            @foreach (Company secrl in Model.VM_COMPANIES)
                            {
                                <tr>
                                    <td>@secrl.c_ID</td>
                                    <td>@secrl.c_Name</td>
                                    
                                    <td><a href="~/@HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString()/Load?id=@secrl.c_ID"><span class="fa fa-pencil"></span></a></td>
                                </tr>
                            }
                        </table>
                    </div>
                    <!-- /.box-body -->
                    <div class="box-footer clearfix page">
                        <p class="demo demo4_top pull-right"></p>
                    </div>
                </div>
                <!-- /.box -->
            </div>
        </div>
    </section>



</div>

@section masterJs
{

    <script>

        var base_rel= "@Url.Action("delete","Employee")";

  $(function () {
      $('#example2').DataTable({
          'paging': true,
          'lengthChange': true,
          'searching': true,
          'ordering': true,
          'info': true,
          'autoWidth': true
      })
  })

  function remove(obj)
  {
      var r = confirm("Are you Sure ,you want to delete this?");
      if (r == true) {
          window.location.href = base_rel + "?id=" + obj;
      } else {
          txt = "You pressed Cancel!";
      }


  }

    </script>
}