@using RSLERP.Models
@using RSLERP.DataManager.Entity
@model RSLERP.Models.ViewModel
@{
    ViewBag.Title = "load";
    Layout = "~/Views/Shared/_LayoutSettings.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Company
            @*<small>Preview</small>*@
        </h1>
        <ol class="breadcrumb">
            <li><a href="~/"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="~/Company">Company</a></li>
            <li class="active">Company Add/Edit</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <!-- left column -->
            <div class="col-md-8">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        @*<h3 class="box-title">User</h3>*@
                        <a href="~/Company" class="btn btn-primary">« Back</a>
                    </div>
                    <!-- /.box-header -->
                    <!-- form start -->
                    @{Html.RenderAction("SubmitStatus", "Common", new { status = Model.CommitStatus, message = Model.SaveChangeMessage }); }
                    @using (Html.BeginForm("Store", HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString(), FormMethod.Post, new { id = "form", data_toggle = "validator", enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="box-body">
                            <input type="hidden" name="VM_COMPANE.c_ID" value="@Model.VM_COMPANE.c_ID" />

                            <div class="form-group">
                                <label class="control-label">Name</label>
                                <input type="text" class="form-control" name="VM_COMPANE.c_Name" id="input_companyname" placeholder="Name" value="@Model.VM_COMPANE.c_Name">
                                @UserHelper.ModelStateMsg(Model.Model_State, "VM_COMPANE.c_Name")
                            </div>

                            <div class="form-group">
                                <label class="control-label">Email</label>
                                <input type="text" class="form-control" name="VM_COMPANE.c_Email" id="input_companyemail" placeholder="Email" value="@Model.VM_COMPANE.c_Email">
                                @UserHelper.ModelStateMsg(Model.Model_State, "VM_COMPANE.c_Email")
                            </div>

                            <div class="form-group">
                                <label class="control-label">Address</label>
                                <input type="text" class="form-control" name="VM_COMPANE.c_Address" id="input_companyaddress" placeholder="Address" value="@Model.VM_COMPANE.c_Address">
                                @UserHelper.ModelStateMsg(Model.Model_State, "VM_COMPANE.c_Address")
                            </div>

                            <div class="form-group">
                                <label class="control-label">Remarks</label>
                                <input type="text" class="form-control" name="VM_COMPANE.c_Remarks" id="input_companyremarks" placeholder="Remarks" value="@Model.VM_COMPANE.c_Remarks">
                                @UserHelper.ModelStateMsg(Model.Model_State, "VM_COMPANE.c_Remarks")
                            </div>
                        </div>
                        <!-- /.box-body -->
                        <div class="box-footer">
                            <button type="submit" class="btn btn-primary">@(Model.VM_COMPANE.c_ID == 0 ? "Save" : "Update")</button>
                        </div>
                    }
                </div>
            </div>
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
@*<script src="~/Content/bower_components/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js"></script>*@
@section masterJs
    {
    <script type="text/javascript">

        $(function () {

            $('.select2').select2();

        });


        $('.datepicker').datepicker({
            format: 'dd MM yyyy',
            autoclose: true
        });
    </script>
}

