@using RSLERP.DataManager.Entity
@using RSLERP.DataManager
@model RSLERP.Models.ViewModel 
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutSettings.cshtml";
}

<div class="content-wrapper">


    <!-- Main content -->
    <section class="content">
        <div class="row">

            <div class="col-xs-12">
                <div class="box box-primary">
                    <div class="box-header">
                        @{Html.RenderAction("SubmitStatus", "Common", new { status = Model.CommitStatus, message = Model.SaveChangeMessage }); }
                        <h3 class="box-title">User Role</h3>
                        <a class="btn btn-primary pull-right" href="@Url.Action("load",HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString())"><span class="fa fa-plus"></span> Add</a>
                        <div class="box-tools">
                        </div>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">

                        <table id="example2" class="table table-hover">
                            <thead>
                                <tr>
                                    <th>User Name</th>
                                    <th>User Role</th>
                                    <th>Edit</th>
                                </tr>
                            </thead>
                            @foreach (CompanyUser secrl in Model.VM_COMPANY_USERS)
                            {
                                String rl_name = "No Role Assign";
                                List<UserRole> userRoles = new DBContext().UserRoles.Where(x => x.ur_u_ID == secrl.u_ID).ToList();
                                if(userRoles.Count>0)
                                {
                                    rl_name = userRoles.FirstOrDefault().ROLE.Name;
                                }
                                <tr>
                                    <td>@secrl.u_LoginName</td>
                                    <td>@rl_name</td>

                                    <td>
                                        <a href="~/@HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString()/Load?id=@secrl.u_ID"><span class="fa fa-pencil"></span></a>
                                                                           </td>
                                </tr>
                            }
                        </table>
                    </div>
                    <!-- /.box-body -->
                    <div class="box-footer clearfix page">
                        <p class="demo demo4_top pull-right"></p>
                    </div>
                </div>
                <!-- /.box -->
            </div>
        </div>
    </section>



</div>

