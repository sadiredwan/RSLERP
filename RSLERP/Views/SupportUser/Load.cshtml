@using RSLERP.Models
@using RSLERP.DataManager.Entity
@model RSLERP.Models.ViewModel
@{
    ViewBag.Title = "Support User Load";
    Layout = "~/Views/Shared/_LayoutCrm.cshtml";
}
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Support Users
            @*<small>Preview</small>*@
        </h1>
        <ol class="breadcrumb">
            <li><a href="~/"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="~/Views/SupportUser">Support Users</a></li>
            <li class="active">Support User Add/Edit</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <!-- left column -->
            <div class="col-md-8">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        @*<h3 class="box-title">User</h3>*@
                        <a href="~/SupportUser" class="btn btn-primary">« Back</a>
                    </div>
                    <!-- /.box-header -->
                    <!-- form start -->
                    @{Html.RenderAction("SubmitStatus", "Common", new { status = Model.CommitStatus, message = Model.SaveChangeMessage }); }
                    @using (Html.BeginForm("Store", HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString(), FormMethod.Post, new { id = "form", data_toggle = "validator", enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="box-body">
                            <input type="hidden" name="VM_SUPPORT_USER.id" value="@Model.VM_SUPPORT_USER.id" />
                            <div class="form-group">
                                <label class="control-label">Name</label>
                                <input type="text" class="form-control" name="VM_SUPPORT_USER.name" id="inputEmail3" placeholder="Name" value="@Model.VM_SUPPORT_USER.name">
                                @UserHelper.ModelStateMsg(Model.Model_State, "VM_SUPPORT_USER.name")
                            </div>
                            <div class="form-group">
                                <label class="control-label">Email</label>
                                <input type="text" class="form-control" name="VM_SUPPORT_USER.email" id="inputEmail3" placeholder="Email" value="@Model.VM_SUPPORT_USER.email">
                                @UserHelper.ModelStateMsg(Model.Model_State, "VM_SUPPORT_USER.email")
                            </div>
                            <div class="form-group">
                                <label class="control-label">Mobile</label>
                                <input type="text" class="form-control" name="VM_SUPPORT_USER.mobile" id="inputEmail3" placeholder="Mobile" value="@Model.VM_SUPPORT_USER.mobile">
                                @UserHelper.ModelStateMsg(Model.Model_State, "VM_SUPPORT_USER.mobile")
                            </div>
                            <div class="form-group">
                                <label class="control-label">Address</label>
                                <input type="text" class="form-control" name="VM_SUPPORT_USER.address" id="inputEmail3" placeholder="Address" value="@Model.VM_SUPPORT_USER.address">
                                @UserHelper.ModelStateMsg(Model.Model_State, "VM_SUPPORT_USER.address")
                            </div>
                        </div>
                        <!-- /.box-body -->
                        <div class="box-footer">
                            <button type="submit" class="btn btn-primary">@(Model.VM_SUPPORT_USER.id == 0 ? "Save" : "Update")</button>
                        </div>
                    }
                </div>
            </div>
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
    @*<script src="~/Content/bower_components/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js"></script>*@
    @section masterJs
{
        <script type="text/javascript">
            $(function () {
                $('.select2').select2();
            });

            $('.datepicker').datepicker({
                format: 'dd MM yyyy',
                autoclose: true
            });
        </script>
    }
