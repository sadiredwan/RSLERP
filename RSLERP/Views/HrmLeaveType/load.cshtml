@using RSLERP.Models
@using RSLERP.DataManager.Entity
@model RSLERP.Models.ViewModel
@{
    ViewBag.Title = "load";
    Layout = "~/Views/Shared/_LayoutHrm.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Leave Type
            @*<small>Preview</small>*@
        </h1>
        <ol class="breadcrumb">
            <li><a href="~/"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="~/HrmLeaveType">Leave Type</a></li>
            <li class="active">Leave Type Add/Edit</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <!-- left column -->
            <div class="col-md-8">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        @*<h3 class="box-title">User</h3>*@
                        <a href="~/HrmLeaveType" class="btn btn-primary">« Back</a>
                    </div>
                    <!-- /.box-header -->
                    <!-- form start -->
                    @{Html.RenderAction("SubmitStatus", "Common", new { status = Model.CommitStatus, message = Model.SaveChangeMessage }); }
                    @using (Html.BeginForm("Store", HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString(), FormMethod.Post, new { id = "form", data_toggle = "validator", enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="box-body">
                            <input type="hidden" name="VM_HRM_LEAVE_TYPE.id" value="@Model.VM_HRM_LEAVE_TYPE.id" />

                            <div class="form-group">
                                <label class="control-label">Name</label>
                                <input type="text" class="form-control" name="VM_HRM_LEAVE_TYPE.name" id="input_name" placeholder="Name" value="@Model.VM_HRM_LEAVE_TYPE.name">
                                @UserHelper.ModelStateMsg(Model.Model_State, "VM_HRM_LEAVE_TYPE.name")
                            </div>

                            <div class="form-group">
                                <label class="control-label">Short Name</label>
                                <input type="text" class="form-control" name="VM_HRM_LEAVE_TYPE.short_name" id="input_short_name" placeholder="Short Name" value="@Model.VM_HRM_LEAVE_TYPE.short_name">
                                @UserHelper.ModelStateMsg(Model.Model_State, "VM_HRM_LEAVE_TYPE.short_name")
                            </div>

                            <div class="form-group">
                                <label class="control-label">Max Days Allowed Monthly</label>
                                <input type="text" class="form-control" name="VM_HRM_LEAVE_TYPE.max_days_allowed_monthly" id="input_max_days_allowed_monthly" placeholder="Max Days Allowed Monthly" value="@Model.VM_HRM_LEAVE_TYPE.max_days_allowed_monthly">
                                @UserHelper.ModelStateMsg(Model.Model_State, "VM_HRM_LEAVE_TYPE.max_days_allowed_monthly")
                            </div>

                            <div class="form-group">
                                <label class="control-label">Max Days Allowed Yearly</label>
                                <input type="text" class="form-control" name="VM_HRM_LEAVE_TYPE.max_days_allowed_yearly" id="input_max_days_allowed_yearly" placeholder="Max Days Allowed Yearly" value="@Model.VM_HRM_LEAVE_TYPE.max_days_allowed_yearly">
                                @UserHelper.ModelStateMsg(Model.Model_State, "VM_HRM_LEAVE_TYPE.max_days_allowed_yearly")
                            </div>

                        </div>
                        <!-- /.box-body -->
                        <div class="box-footer">
                            <button type="submit" class="btn btn-primary">@(Model.VM_HRM_LEAVE_TYPE.id == 0 ? "Save" : "Update")</button>
                        </div>
                    }
                </div>
            </div>
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
@*<script src="~/Content/bower_components/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js"></script>*@
@section masterJs
    {
    <script type="text/javascript">

        $(function () {

            $('.select2').select2();

        });


        $('.datepicker').datepicker({
            format: 'dd MM yyyy',
            autoclose: true
        });
    </script>
}

