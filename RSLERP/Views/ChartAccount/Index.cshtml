@using RSLERP.DataManager.Entity
@using RSLERP.Models
@model RSLERP.Models.ViewModel 
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutSettings.cshtml";
}



<div class="content-wrapper">


    <!-- Main content -->
    <section class="content">
        <div class="row">

            <div class="col-xs-12">
                <div class="box box-primary">
                    <div class="box-header">

                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <div class="col-md-6 col-sm-12">
                            <div id="jstree" class="jstree">
                                @(Html.TreeView(Model.VM_TREE_MENUS)
                                        .EmptyContent("COA")
                                        .Children(m => m.childTreeLst)
                                        .HtmlAttributes(new { id = "tree" })
                                        .ChildrenHtmlAttributes(new { @class = "subItem" })
                                        .ItemText(m => m.Link_Name)
                                    .ItemTemplate(
                            @<text>
                                <a class="jstree-checked'" id="@item.Link_Url" href="@item.Link_Url" desc="@item.Link_Name">@item.Link_Name</a>
                            </text>)
                                )
                            </div>
                        </div>
                        <div class="col-md-6 col-sm-12">
                            <div id="jstreePartialLoad"></div>
                         </div>
                        </div>
                    <!-- /.box-body -->
                    <div class="box-footer clearfix page">
                        <p class="demo demo4_top pull-right"></p>
                    </div>
                </div>
                <!-- /.box -->
            </div>
        </div>
    </section>



</div>

@section masterJs
{

    <script>

        var base_rel= "@Url.Action("delete","Employee")";

  $(function () {
      $('#example2').DataTable({
          'paging': true,
          'lengthChange': true,
          'searching': true,
          'ordering': true,
          'info': true,
          'autoWidth': true
      })
  })

  function remove(obj)
  {
      var r = confirm("Are you Sure ,you want to delete this?");
      if (r == true) {
          window.location.href = base_rel + "?id=" + obj;
      } else {
          txt = "You pressed Cancel!";
      }


  }

  $(function () {
      $('.select2').select2();
      var selectedData;
      $('.jstree').jstree({
          "core": {
              "multiple": false,
              "check_callback": true,
              'themes': {
                  "responsive": true,
                  'variant': 'larg',
                  'stripes': false,
                  'dots': false
              }
          },
          "checkbox": {
              "real_checkboxes": true,
              "real_checkboxes_names": function (n) {
                  return [n[0].id, 1];
              },
              //"two_state": true,
              "three_state": false,
          },
          "types": {
              "default": {
                  "icon": "fa fa-folder icon-state-warning icon-lg"
              },
              "file": {
                  "icon": "fa fa-file icon-state-warning icon-lg"
              }
          },
          "plugins": ["dnd", "state", "types", "sort"]
      }).bind("ready.jstree", function (e, data) {
          $('.jstree').jstree("deselect_all");
      }).on('changed.jstree', function (e, data) {
     
          for (i = 0, j = data.selected.length; i < j; i++) {
              var ids = data.instance.get_node(data.selected[i]).a_attr.href;
              jstreeOnChange(ids);
          }
      }).refresh();



  });


  function jstreeOnChange(id)
  {
      $("#jstreePartialLoad").html("Loading...");
      if ($("#ddlCompany").val() != 0) {
          var companyID = $("#ddlCompany").val();
          $.ajax({
              url: '/@HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString()/PartialLoadCOA?id=' + id,
              type: 'GET',
              success: function (data) {
                  $("#jstreePartialLoad").html(data);

              },
              error: function () {

              }
          });
      }
  }

    </script>
}
