@using RSLERP.Models
@using RSLERP.DataManager.Entity
@model RSLERP.Models.ViewModel
@{
    ViewBag.Title = "load";
    Layout = "~/Views/Shared/_LayoutSettings.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Department
            @*<small>Preview</small>*@
        </h1>
        <ol class="breadcrumb">
            <li><a href="~/"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="~/Views/Department">Departments</a></li>
            <li class="active">Department Add/Edit</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <!-- left column -->
            <div class="col-md-8">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        @*<h3 class="box-title">User</h3>*@
                        <a href="~/Department" class="btn btn-primary">« Back</a>
                    </div>
                    <!-- /.box-header -->
                    <!-- form start -->
                    @{Html.RenderAction("SubmitStatus", "Common", new { status = Model.CommitStatus, message = Model.SaveChangeMessage }); }
                    @using (Html.BeginForm("Store", HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString(), FormMethod.Post, new { id = "form", data_toggle = "validator", enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="box-body">
                            <input type="hidden" name="VM_DEPARTMENT.id" value="@Model.VM_DEPARTMENT.id" />

                            <div class="form-group">
                                <label class="control-label">Name</label>
                                <input type="text" class="form-control" name="VM_DEPARTMENT.name" id="dept_inputname" placeholder="Name" value="@Model.VM_DEPARTMENT.name">
                                @UserHelper.ModelStateMsg(Model.Model_State, "VM_DEPARTMENT.name")
                            </div>
                            <div class="form-group">
                                <label class="control-label">Description</label>
                                <input type="text" class="form-control" name="VM_DEPARTMENT.description" id="dept_inputdesc" placeholder="Description" value="@Model.VM_DEPARTMENT.description">
                                @UserHelper.ModelStateMsg(Model.Model_State, "VM_DEPARTMENT.description")
                            </div>
                        </div>
                        <!-- /.box-body -->
                        <div class="box-footer">
                            <button type="submit" class="btn btn-primary">@(Model.VM_DEPARTMENT.id == 0 ? "Save" : "Update")</button>
                        </div>
                    }
                </div>
            </div>
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
@*<script src="~/Content/bower_components/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js"></script>*@
@section masterJs
    {
    <script type="text/javascript">

            $(function () {

                $('.select2').select2();

            });


            $('.datepicker').datepicker({
                format: 'dd MM yyyy',
                autoclose: true
            });
    </script>
}

