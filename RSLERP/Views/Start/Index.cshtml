@using RSLERP.DataManager.Entity
@model RSLERP.Models.ViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutStart.cshtml";
}



<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    @*<section class="content-header">
            <h1>
                Dashboard
                <small>Control panel</small>
            </h1>
            <ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
                <li class="active">Dashboard</li>
            </ol>
        </section>*@
    <!-- Main content -->
    <section class="content">


        <div class="box-body">
            @foreach (var appModule in Model.VM_MENUS)
            {
                string icon = appModule.icon == "" ? "fa fa-folder" : appModule.icon;
                <a href="@appModule.url" class="btn btn-app">
                    <i class="@icon" aria-hidden="true"></i> @appModule.Name
                </a>

            }
        </div>






    </section>
    <!-- /.content -->
</div>


<div class="modal fade" id="modalAccnFn">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">Default Modal</h4>
            </div>
            <div class="modal-body">
                <p>One fine body&hellip;</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>




@section masterjs
{
    <script type="text/javascript">

        function launCHModal(id)
        {
            $('#modalAccnFn').modal('show');
        }

    </script>
}
